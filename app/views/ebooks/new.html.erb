<% if !@ebook.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @ebook.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<div class="row">
<div class="col-md-6 col-md-offset-3">
  <%= form_for @ebook, html: { multipart: true } do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, {class: "form-control"}  %>
    <%= f.label :descipline %>
    <%= f.collection_select :descipline_id, Descipline.all, :id, :name,  {:include_blank => "Please select Descipline"}, { :class => 'form-control'} %>
    <%= f.label :attachment %>
    <%= f.file_field :attachment, {class: "form-control"} %>
    <br>
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>