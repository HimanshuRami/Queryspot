<% provide(:title, "EBooks")%>
<p id="notice"><%= notice %></p>

<%# binding.pry %>
<% if descipline.ebooks.present? %>
	<center><h3>Available Ebook for <%= descipline.name %> Discipline :</h3></center>
	<hr>

	<table class="table table-bordered table-striped">
	<ul>
		<thead>
    <tr>
      <th>Name</th>
      <th>Download Link</th>
    </tr>
  </thead>
		<% descipline.ebooks.each do |ebook|%>
		<tr><td>
			
			<%= ebook.name%>
			</td>
			<td>
				<%= link_to 'Download' ,ebook.attachment_url , target: '_blank'   %>
			</td>
		</tr>

		<% end %>
	</ul>
</table>
<% else %>
	<h3> Sorry, This <%= descipline.name %> descipline doesn't have any ebook..</h3>
<% end %>