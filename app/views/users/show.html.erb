<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %></br>
      </h1>
    <span><%= pluralize(@user.microposts.count, "Microtales") %> |
<%= pluralize(@user.question_ces.count, "Queries") %></span>
    </section>


    <section class="stats">
      <%= render "shared/stats"%>
    </section>
  </aside>
 <div class="col-md-8">
 <%= render "follow_form" if logged_in?%>
    <% if @user.microposts.any? %>
      <h3 style="text-align: center;"> <%= @user.name %> 's Microtales (<%= @user.microposts.count %>)</h3> 
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  


  <div class="col-md-8">
      <% if @user.question_ces.any? %>
        <h3 id="queries"> <%= @user.name %>'s Queries..(<%= @user.question_ces.count%>)</h3>
          <ol class="question_ces">
            <%= render @question_ces %>
          </ol>
        <%= will_paginate @question_ces %>
      <% end %>
  </div>
</div>
</div>