 <%= form_for @comment, url: micropost_create_comment_path  do |f| %>
  <%= f.label :comment %>:
  <%= f.text_field :body %><br />
<%= f.hidden_field :user_id, :value => current_user.id %>
       <%= f.hidden_field :micropost_id, :value =>  params[:micropost_id].to_i %>
  <%= f.submit "Post Comment" %>
<% end %>
